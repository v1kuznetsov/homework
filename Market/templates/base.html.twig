<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Market{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                <ul>
                <li><a href="{{ path('list') }}">Главная</a></li>
                <li><a href="{{ path('category') }}">Категории</a></li>
                <li><a href="{{ path('basket') }}">Корзина</a></li>
                {% if app.user %}
                    <li>
                        Привет {{ app.user.userIdentifier }} <a href="{{ path('profile', { 'Email': app.user.userIdentifier }) }}">Профиль</a> | <a href="{{ path('logout') }}">Выйти</a>
                    </li>
                    {% else %}
                    <li>
                        Вы не вошли, <a href="{{ path('login') }}">Войти</a> | <a href="{{ path('register') }}">Регистрация</a>
                    </li>
                {% endif %}
                </ul>
            {% endblock %}
        </header>
        {% block body %}
        {% endblock %}
        <footer>
            {% block footer %}
            {% endblock %}
        </footer>
    </body>
</html>
