        <img src="../images/{{ product.image }}" height="200" />
        <p>{{ product.name }}</p>
        <p>{{ product.description }}</p>
        <p>{{ product.price }} UAH</p>
        <p><a>Add to basket</a></p>
    </div>
{% endblock %}
